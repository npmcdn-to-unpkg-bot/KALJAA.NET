// Place your settings in this file to overwrite default and user settings.
{
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/packages": true,
        "**/tmp": true,
        "wwwroot/app/**/*.js": true,
        "wwwroot/app/**/*.map": true
    },
    "editor.folding": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 2000,
    "files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/packages": true,
        "**/tmp": true,
        "**/bin": true,
        "wwwroot/app/**/*.js": true,
        "wwwroot/app/**/*.map": true
	}
}